<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anko.newconnect.HomeActivity"
    tools:showIn="@layout/app_bar_home">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <!-- Initialize Scrollview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/bg3"
                    >

                    <!--First Item-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/travelClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/travel_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Travel"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Share your Adventures"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>

                    <!--//Second Item-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/lunchClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/lunch_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lunch"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Invite Friends to Lunch"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>

                    <!-- //3rd-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/dinnerClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/dinner_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinner"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Dine and Share"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>

                    <!--new Event-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/eventsClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/events_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Events"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Browse and Post Events"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>

                    <!-- //4th-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/moviesClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/movie_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Movies"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Cinematic Adventures"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>
                    <!--//5th-->

                    <android.support.v7.widget.CardView
                        android:layout_width="340dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="30dp"
                        android:id="@+id/sportsClick">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription"
                            android:src="@drawable/sports_img"
                            android:scaleType="centerCrop"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sports"
                            android:layout_marginTop="90dp"
                            android:layout_marginLeft="20dp"
                            android:textStyle="bold"
                            android:textSize="21sp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="110dp"
                            android:text="Sportsroom"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"/>

                    </android.support.v7.widget.CardView>

                    <!--//End of Items -->
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
        <!--end of scrollview-->

    </FrameLayout>


</RelativeLayout>



